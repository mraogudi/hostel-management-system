# Terraform Variables Example
# Copy this file to terraform.tfvars and modify the values

# Cloud provider selection (required)
cloud_provider = "aws"  # Options: "aws", "gcp", "azure"

# Environment configuration
environment = "prod"    # Options: "dev", "staging", "prod"
project_name = "hostel-management"

# Infrastructure configuration
region = "us-west-2"    # Cloud-specific regions:
                        # AWS: us-west-2, us-east-1, eu-west-1
                        # GCP: us-central1, europe-west1, asia-east1
                        # Azure: East US, West Europe, Southeast Asia

# Cluster configuration
cluster_name = ""       # Auto-generated if empty
node_count = 3
node_instance_type = "" # Auto-selected if empty:
                        # AWS: t3.medium, t3.large, m5.large
                        # GCP: e2-standard-2, n1-standard-2, n2-standard-2
                        # Azure: Standard_B2s, Standard_D2s_v3, Standard_DS2_v2

# Auto-scaling configuration
enable_auto_scaling = true
min_node_count = 2
max_node_count = 10

# Storage configuration
disk_size = 100         # GB

# Kubernetes configuration
kubernetes_version = "1.28"

